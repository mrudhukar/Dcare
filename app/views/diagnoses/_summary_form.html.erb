<div id="diag_summary" class="modal hide fade in">
  <div class="modal-header">
    <button class="close" data-dismiss="modal">Ã—</button>
    <h3><%= @diagnosis.new_record? ? "Add New Medical Report" : "Edit Report" %></h3>
  </div>
  <%= simple_form_for @diagnosis, :validate => true, :html => {:class => 'form-vertical' } do |f| %>
    <div class="modal-body">
      <%= f.input :name, :input_html => {:class => 'span4'} %>
      <%= f.input :description, :input_html => {:class => 'span5', :rows => 5} %>
      <%= f.input :diagnosis_date, :as => :date_picker, :input_html => { :value => @diagnosis.display_date } %>
    </div>  

    <div class="modal-footer form-actions">
      <%= f.submit @diagnosis.new_record? ? "Add Report" : "Update", :class => 'btn btn-primary', :disable_with => "please wait.." %>
      <%= link_to("Cancel", "#", :class => "btn", :data => {:dismiss => "modal"}) %>
    </div>
  <% end %>
</div>