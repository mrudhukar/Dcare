<% @title = "Diagnosis Report" %>
<%= simple_form_for @diagnosis, :validate => true, :html => { :class => 'form-horizontal' } do |f| %>
<div class="container-fluid">
	    <div class="row-fluid">
	    <div>
		    
		    <div class="well">
		    	<div class="row-fluid">
		    		<div class="span2">
		    			<label class="label_header">Diagnosis Name</label>
		    		</div>
		    		<div class="span4">
		    			<%= @diagnosis.name%>
		    		</div>
		    	</div>
		    	<div class="row-fluid">
		    		<div class="span2">
		    			<label class="label_header">Diagnosis Description</label>
		    		</div>
		    		<div class="span4">
		    			<%= @diagnosis.description%>
		    		</div>
		    		<div class="span4">
		    			<%= link_to "Save", diagnosis_path(@diagnosis), :class => 'btn btn-primary'%>
		    			<%= link_to "Edit", edit_diagnosis_path(@diagnosis), :class => 'btn btn-danger'%>
		    			<%= link_to "Cancel", diagnosis_path(@diagnosis), :class => 'btn'%>
		    			<%= link_to "Print Report", diagnosis_path(@diagnosis), :class => 'btn'%>
		    		</div>
		    	</div>
		    	<div class="row-fluid">
		    		<div class="span2">
		    			<label class="label_header">Diagnosis Date</label>
		    		</div>
		    		<div class="span4">
		    			<%= @diagnosis.diagnosis_date%>
		    		</div>
		    	</div>
		    </div>
			
		    <div>
		    	<div class="tabbable">
					<ul class="nav nav-tabs">
					<li class="active"><a href="#1" data-toggle="tab">Bloot Test</a></li>
					<li><a href="#2" data-toggle="tab">Anthropometry</a></li>
					<li><a href="#3" data-toggle="tab">Urine</a></li>
					<li><a href="#4" data-toggle="tab">Others</a></li>
					</ul>
					<div class="tab-content">
						<div class="tab-pane active" id="1">
							<%= f.simple_fields_for :blood_test do |blood_test| %>
						  		<%= blood_test.input :hemoglobin_total %>
						  		<%= blood_test.input :hemoglobin_differential_count %>
						  		<%= blood_test.input :esr %>
						  		<%= blood_test.input :blood_sugar_fasting %>
						  		<%= blood_test.input :blood_sugar_pp %>
						  		<%= blood_test.input :hba1c %>
						  		<%= blood_test.input :triglycerides %>
						  		<%= blood_test.input :total_cholestrol %>
						  		<%= blood_test.input :ldl %>
						  		<%= blood_test.input :hdl %>
						  		<%= blood_test.input :blood_urea %>
						  		<%= blood_test.input :serum_uric_acid %>
						  		<%= blood_test.input :serum_creatinine %>
						  		<%= blood_test.input :LFT_serum_albumin %>
						  		<%= blood_test.input :LFT_gloulin_ratio %>
						  		<%= blood_test.input :LFT_serum_bilirubin %>
						  		<%= blood_test.input :LFT_SGOT %>
						  		<%= blood_test.input :LFT_SGPT %>
						  		<%= blood_test.input :LFT_GGT %>
						  	<%end%>
						</div>
						<div class="tab-pane" id="2">
							<%= f.simple_fields_for :anthropometry do |anthropometry| %>
						  		<%= anthropometry.input :height %>
						  		<%= anthropometry.input :weight %>
						  		<%= anthropometry.input :bmi %>
						  		<%= anthropometry.input :abdominal_girth %>
						  		<%= anthropometry.input :systoloic_bp %>
						  		<%= anthropometry.input :diastolic_bp_supine %>
						  		<%= anthropometry.input :diastolic_bp_errect %>
						  	<%end%>
						</div>
						<div class="tab-pane" id="3">
							<%= f.simple_fields_for :urine do |urine| %>
						  		<%= urine.input :urine_pus_cells %>
						  		<%= urine.input :urine_spot_protien %>
						  		<%= urine.input :GFR %>
						  		<%= urine.input :sugar %>
						  		<%= urine.input :ketones %>
						  		<%= urine.input :microalbumin %>
						  		<%= urine.input :alb %>
						  	<%end%>
						</div>
						<div class="tab-pane" id="4">
							<%= f.simple_fields_for :other do |other| %>
						  		<%= other.input :fundus %>
						  		<%= other.input :VPT %>
						  		<%= other.input :ECG %>
						  		<%= other.input :TMT %>
						  		<%= other.input :echocardiography_2d %>
						  		<%= other.input :angiography %>
						  		<%= other.input :ultrasound %>
						  		<%= other.input :carotid_doppler %>
						  		<%= other.input :color_doppler_for_limbs %>
						  	<%end%>
						</div>
					</div>
				</div>
		    </div>
	    </div>
		</div>
</div>
<%end%>
