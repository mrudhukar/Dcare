<% if @title || @page_action %>
<div class="row-fluid" id="inner_header">
  <% if @title %>
    <h2 class="span10"><%= @title %></h2>
  <% end %>
  <% if @page_action %>
    <div class="span2 title_action">
      <%= link_to(@page_action[:name] , @page_action[:url], :class => "btn btn-large btn-primary", :remote => @page_action[:remote], :disable_with => "please wait..") %>
    </div>
  <% end %>
</div>  
<% end %>

<% flash.each do |name, msg| %>
  <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
    <a class="close" data-dismiss="alert">Ã—</a>
    <%= msg %>
  </div>
<% end %>